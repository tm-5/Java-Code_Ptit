
package javaapplication1;
import java.util.*;

public class JavaApplication1 {
    public static void main(String[] args) {
        Scanner s= new Scanner(System.in);
        int a=s.nextInt();
        int b=s.nextInt();
        if(a<=0 || b<=0) System.out.println(0);
        else System.out.println((a+b)*2+" "+a*b);
    }   
}
